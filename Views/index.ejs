<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node App Server Side</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <!-- form -->
    <div class="container bg-white">
      <div class="border mt-3 p-3 rounded shadow-lg">
        <h1 class="text-center text-primary">PRODUCT</h1>
        <form action="/submit" method="post" enctype="multipart/form-data">
          <div class="m-3 row">
            <label for="productId" class="col-sm-2 col-form-label"
              >Product Id</label
            >
            <div class="col-sm-10">
              <input
                type="text"
                class="form-control"
                id="productId"
                name="productId"
                required
              />
            </div>
          </div>

          <div id="errRow" class="m-3 row" style="display: none">
            <div class="col-sm-2"></div>
            <div id="errMsg" class="alert alert-danger col-sm-10" role="alert">
              <%= message %>
            </div>
          </div>

          <div class="m-3 row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                required
              />
            </div>
          </div>
          <div class="m-3 row">
            <label for="quanlity" class="col-sm-2 col-form-label"
              >Quantity</label
            >
            <div class="col-sm-10">
              <input
                type="number"
                class="form-control"
                id="quanlity"
                name="quanlity"
                required
              />
            </div>
          </div>
          <div class="m-3 row">
            <label for="image" class="col-sm-2 col-form-label">Image</label>
            <div class="col-sm-10">
              <input
                type="file"
                class="form-control"
                id="image"
                name="image"
                required
              />
            </div>
          </div>

          <div class="m-4 row">
            <button type="submit" class="btn btn-primary form-control">
              Upload
            </button>
          </div>
        </form>
      </div>
      <!-- table -->
      <div class="border p-5 mt-5 rounded shadow-lg">
        <h4 class="text-center bg-primary text-white rounded p-3">
          PRODUCT LIST
        </h4>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col" class="text-center">Product Id</th>
              <th scope="col" class="text-center">Name</th>
              <th scope="col" class="text-center">Quantity</th>
              <th scope="col" class="text-center">Image</th>
              <th scope="col" class="text-center">Check</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < data.length; i++) { %>
            <tr class="text-center">
              <td><%= data[i].productId %></td>
              <td><%= data[i].name %></td>
              <td><%= data[i].quanlity %></td>
              <td>
                <img
                  src="<%= data[i].image%>"
                  alt="<%= data[i].image%>"
                  width="100"
                  height="100"
                />
              </td>

              <td>
                <input
                  type="checkbox"
                  id="<%= data[i].productId %>"
                  name="check<%= data[i].productId %>"
                  value="<%= data[i].productId %>"
                />
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <div class="d-flex justify-content-end">
          <button type="button" class="btn btn-primary" onclick="deleteData()">
            Delete
          </button>
        </div>
      </div>
    </div>
  </body>

  <script>
    function deleteData() {
      let checkedList = [];
      document
        .querySelectorAll('input[type="checkbox"]:checked')
        .forEach((checkbox) => {
          checkedList.push(checkbox.value);
        });

      const sendRequest = async () => {
        const response = await fetch("/delete", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ checkedList }),
        });
      };
      sendRequest();
      window.location.reload();
    }

    const alert = document.getElementById("errMsg");
    const alertContainer = document.getElementById("errRow");

    if (alert.textContent.trim() !== "") {
      alertContainer.style.display = "flex";
    }
    setTimeout(() => {
      alertContainer.style.display = "none";
    }, 3000);
  </script>
</html>
